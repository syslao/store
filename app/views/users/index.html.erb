
<div class="container">
    <h1>Listing Users</h1>
    <br>
    <%= link_to 'New User', new_user_path %>
    <br>
    <br>

                       <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h3 id="myModalLabel">Delete</h3>
                        </div>
                        <div class="modal-body">
                            <p></p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                            <button data-dismiss="modal" class="btn red" id="btnYes">Confirm</button>
                        </div>
   </div><table class="table table-striped table-hover table-users">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                    </tr>
                </thead>

                <tbody>
                    

                <% @users.each do |user| %>
                    <tr>

                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.email %></td>

                        <td><%= link_to 'Show', user, class: 'btn btn-info' %></td>
                                            
                        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %></td>

                        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>

                    </tr>
                    <% end %>

                   </tbody>

            </table>
        <% if current_user %> <%= link_to 'New Item', new_item_path, class: "btn btn-success" %>
        <% end %>
    </div>
