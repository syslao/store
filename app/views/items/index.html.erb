<body>

    <!-- Page Content -->
    <div class="container">

                       <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h3 id="myModalLabel">Delete</h3>
                        </div>
                        <div class="modal-body">
                            <p></p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                            <button data-dismiss="modal" class="btn red" id="btnYes">Confirm</button>
                        </div>
   </div><table class="table table-striped table-hover table-users">
                <thead>
                    <tr>
                        <th>In Stock</th>
                        <th>Store</th>
                        <th>Title</th>
                        <th class="hidden-phone">Content</th>
                        <th class="hidden-phone">Create date</th>
                    </tr>
                </thead>

                <tbody>
                    

                <% @items.each do |item| %>
                    <tr>
                        <% if item.visible %>
                        <td><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></td>
                        <% else %>
                        <td><span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span></td>
                        <% end %>
                        <td><%= item.user.store_name %></td>
                        <td><%= item.title %></td>
                        <td><%= item.content %></td>
                      <td><%= item.created_at.strftime("%d %b %Y") %></td>
                                            
                       <td><%= link_to 'Show', item, class: 'btn btn-info' %></td>
                                            
                        <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-warning' %></td>

                        <td><%= link_to 'Destroy', item, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <td><%= link_to("Make PRO", item_pro_path(item), :confirm => "Are you sure?", :method => :post)%></td>
                    </tr>
                    <% end %>

                   </tbody>

            </table>
        <% if current_user %> <%= link_to 'New Item', new_item_path, class: "btn btn-success" %>
        <% end %>
    </div>
</body>
</html>
