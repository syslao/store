<h1>Listing Item</h1>
<table>
<thead>
<tr>
<th>User</th>
<th>Title</th>
<th>Content</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>
 <% @items.each do |item| %>
<tr>
<td><%= item.user %></td>
<td><%= item.title %></td>
<td><%= item.content %></td>
<td><%= link_to 'Show', item %></td>
<td><% if current_user && item.user == current_user %><%= link_to 'Edit', edit_item_path(item) %><% end %></td>
<td><% if current_user && item.user == current_user %><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
</tr>
 <% end %>
</tbody>
</table>
<br>
<% if current_user %> <%= link_to 'New Item', new_item_path %>
<% end %>